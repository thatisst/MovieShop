@using MovieShop.Core.ServiceInterfaces

@model MovieShop.Core.Models.Response.MovieDetailsResponseModel
@inject MovieShop.Core.ServiceInterfaces.ICurrentLogedInUser logedInUser

@{
    ViewData["Title"] = "BuyMovie";
}

<form method="post" asp-controller="User" asp-action="BuyMovie">
    <div class="card container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <img src="@Model.PosterUrl" alt="@Model.Title" class="card-img-top" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5>Order Summary</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Movie Title</h6>
                        </div>
                        <div class="col-md-6">
                            <h6>Unit Price</h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Model.Title
                            <input type="hidden" name="MovieId" value="@Model.Id" />
                            @if (logedInUser.IsAuthenticated)
                            {
                                <input type="hidden" name="UserId" value="@logedInUser.UserId" />
                             }
                        </div>
                        <div class="col-md-6">
                            $ @Model.Price
                        </div>
                        <div class="col-12">
                            <input type="submit" name="" value="Confirm Purchase" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</form>
