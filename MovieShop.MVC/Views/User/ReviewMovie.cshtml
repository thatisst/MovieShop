@using MovieShop.Core.ServiceInterfaces

@model MovieShop.Core.Models.Response.MovieDetailsResponseModel
@inject MovieShop.Core.ServiceInterfaces.ICurrentLogedInUser logedInUser

@{ ViewData["Title"] = "ReviewMovie"; }

<form method="post" asp-controller="User" asp-action="ReviewMovie">
    <div class="card container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <img src="@Model.PosterUrl" alt="@Model.Title" class="card-img-top" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5>Post a new Review</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Rating</h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="radio" id="1" name="rating" value="1" />
                            <label for="1">1</label>
                            <input type="radio" id="2" name="rating" value="2" />
                            <label for="2">2</label>
                            <input type="radio" id="3" name="rating" value="3" />
                            <label for="3">3</label>
                            <input type="radio" id="4" name="rating" value="4" />
                            <label for="4">4</label>
                            <input type="radio" id="5" name="rating" value="5" />
                            <label for="5">5</label>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Review</h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="text" name="ReviewText" value="" />
                            <input type="hidden" name="MovieId" value="@Model.Id" />
                            @if (logedInUser.IsAuthenticated)
                            {
                <input type="hidden" name="UserId" value="@logedInUser.UserId" />}
                        </div>
                    </div>

                    <div class="col-12">
                        <input type="submit" name="" value="Confirm Review" class="btn btn-primary btn-block align-bottom" />
                    </div>
                </div>
            </div>

        </div>

    </div>
</form>
